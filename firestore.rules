rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }

    // Helper function to check if user is admin (you can add role-based logic later)
    // For now, any authenticated user (logged in via your admin panel) triggers this.
    // In a real enterprise app, you'd check `request.auth.token.admin == true` or a user document.
    function isAdmin() {
      return isAuthenticated(); 
    }

    // Leads Collection (Contact & Pricing Forms)
    // Public: Can create (submit form)
    // Admin: Can read, update, delete
    match /leads/{leadId} {
      allow create: if true; // Public lead submission
      allow read, update, delete: if isAdmin();
    }

    // Default: Deny everything else
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
